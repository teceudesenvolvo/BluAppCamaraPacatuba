platform :ios, '16.0'

# Opt-in to modular headers only for Firebase/GoogleUtilities to avoid global
# module map conflicts (global `use_modular_headers!` can cause redefinition
# errors for React module maps). This sets modular headers for the low-level
# Google/Firebase pods so Swift pods can import them when necessary.
pod 'GoogleUtilities', :modular_headers => true
# Targeted modular headers for Firebase core pods that are referenced by Swift
# pods. This avoids using `use_modular_headers!` globally which can break
# React's modulemaps while ensuring Firebase pods produce module maps.
pod 'FirebaseCore', :modular_headers => true
pod 'FirebaseInstallations', :modular_headers => true

require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`) , "scripts/autolinking")
require File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`) , "scripts/react_native_pods")
