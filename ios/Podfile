platform :ios, '16.0'

# Opt-in to modular headers only for Firebase/GoogleUtilities to avoid global
# module map conflicts (global `use_modular_headers!` can cause redefinition
# errors for React module maps). This sets modular headers for the low-level
# Google/Firebase pods so Swift pods can import them when necessary.
pod 'GoogleUtilities', :modular_headers => true
# Targeted modular headers for Firebase core pods that are referenced by Swift
# pods. This avoids using `use_modular_headers!` globally which can break
# React's modulemaps while ensuring Firebase pods produce module maps.
pod 'FirebaseCore', :modular_headers => true
pod 'FirebaseInstallations', :modular_headers => true

require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`) , "scripts/autolinking")
require File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`) , "scripts/react_native_pods")
require 'json'

podfile_properties = JSON.parse(File.read(File.join(__dir__, 'Podfile.properties.json'))) rescue {}

prepare_react_native_project!

target 'CMPacatuba' do
  use_expo_modules!

  config = use_native_modules!

  # React Native com Fabric habilitado
  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => true,
    :fabric_enabled => true,        # ⚡ Fabric ON
    :app_path => "#{Pod::Config.instance.installation_root}/..",
  )

  # Firebase (use RNFB packages to pull correct Firebase versions)
  pod 'RNFBApp', :path => '../node_modules/@react-native-firebase/app'
  pod 'RNFBMessaging', :path => '../node_modules/@react-native-firebase/messaging'

  # Notifee (not present in package.json) — keep commented unless package is added
  # pod 'RNNotifee', :path => '../node_modules/@notifee/react-native'

  # React Native WebView
  pod 'react-native-webview', :path => '../node_modules/react-native-webview'

  # Ajustes pós-instalação
  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    # Ajusta todos os targets para deployment 16.0 e permite includes não-modulares
    installer.pods_project.targets.each do |t|
      t.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      end
    end
  end
end
